<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/mine_iv"
        android:layout_width="@dimen/order_imageview_width"
        android:layout_height="@dimen/order_imageview_height"
        android:src="@drawable/kuaican1" />

    <TextView
        android:textSize="@dimen/order_text_size"
        android:layout_marginTop="@dimen/order_text_marginTop"
        android:id="@+id/mine_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test" />

</LinearLayout>